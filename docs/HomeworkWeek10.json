{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "width": 800,
  "height": 400,
  
  "data": {
    "url": "https://raw.githubusercontent.com/elii0017/FIT3179/refs/heads/main/Excel%20Files/2016-2024-Demographic.csv",
    "format": {
      "type": "csv"
    }
  },
  
  "transform": [
    {
      "calculate": "datum.Demographic + ' ' + datum.Gender",
      "as": "DemographicGender"
    },
    {
      "filter": {"selection": "stateFilter"}
    },
    {
      "filter": {"selection": "genderFilter"}
    },
    {
      "filter": {"selection": "demographicFilter"}
    }
  ],
  
  "selection": {
    "demographicFilter": {
      "type": "multi",
      "fields": ["Demographic"],
      "init": {"Demographic": ["Indigenous", "Non-Indigenous", "Australian"]},
      "bind": {
        "input": "select",
        "options": ["Indigenous", "Non-Indigenous", "Australian"],
        "name": "Demographic:",
        "multiple": true
      }
    },
    "genderFilter": {
      "type": "multi",
      "fields": ["Gender"],
      "init": {"Gender": ["Male", "Female", "Total"]},
      "bind": {
        "input": "select",
        "options": ["Male", "Female", "Total"],
        "name": "Gender:",
        "multiple": true
      }
    },
    "stateFilter": {
      "type": "single",
      "fields": ["State"],
      "init": {"State": "AUSTRALIA"},
      "bind": {
        "input": "select",
        "options": [
          "AUSTRALIA", 
          "NSW", 
          "VIC", 
          "QLD", 
          "SA", 
          "WA", 
          "TAS", 
          "NT", 
          "ACT"
        ],
        "name": "State/Territory:"
      }
    }
  },
  
  "mark": "line",
  
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Prisoner Receptions"
    },
    "color": {
      "field": "DemographicGender",
      "type": "nominal",
      "title": "Demographic and Gender",
      "scale": {
        "domain": [
          "Australian Total",
          "Australian Male",
          "Non-Indigenous Total",
          "Non-Indigenous Male",
          "Indigenous Total",
          "Indigenous Male",
          "Australian Female",
          "Non-Indigenous Female",
          "Indigenous Female"
        ],
        "scheme": "dark2"
      },
      "legend": {
        "title": "Demographic and Gender"
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Count", "type": "quantitative", "title": "Prisoner Receptions"},
      {"field": "Demographic", "type": "nominal", "title": "Demographic"},
      {"field": "Gender", "type": "nominal", "title": "Gender"}
    ]
  }
}
